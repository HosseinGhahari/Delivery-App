@page
@model Delivery_App.Pages.Destination.CreateDestinationModel
@{
}



<!-- This code displays a form for creating a new destination. 
It includes fields for the destination name and price, and a 
submit button. If there are any errors or if the destination 
already exists, an alert message is displayed at the top of the form. -->


<div class="col-12 mb-4">
    @if (TempData["Exist"] != null || TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Exist"]
            @TempData["Error"]
        </div>
    }
</div>

<form method="post">
    <div class="row">
        <div class="col-md-12 form-group mb-3">
            <label for="DestinationName">نام مقصد</label>
            <input class="form-control" name="DestinationName" type="text" id="DestinationName" />
        </div>
        <div class="col-md-12 form-group mb-3">
            <label for="Price">قیمت</label>
            <input class="form-control" name="Price" type="text" id="Price" />
        </div>
        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-success">ثبت کردن</button>
        </div>
    </div>
</form>
