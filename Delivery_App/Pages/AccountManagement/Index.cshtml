@page
@model Delivery_App.Pages.AccountManagement.IndexModel
@{
}

<div class="text-center">
    <h1 class="display-4">مدیریت کاربر</h1>
    <table class="table table-responsive table-bordered table-striped" dir="rtl">
        <thead>
            <tr>
                <td>نام کاربری</td>
                <td>عملیات ویرایش</td>
                <td>عملیات حذف</td>
            </tr>
        </thead>
        <tbody>

            <tr>
                <th>@Model.Users.UserName</th>
                <th><a asp-page="/AccountManagement/EditUser" asp-route-id="@Model.Users.Id">ویرایش</a></th>
                <th>
                <a asp-page-handler="RemoveUser" asp-route-id="@Model.Users.Id" class="link-danger"
                        onclick="return confirm('آیا از حذف این کاربر مطمئن هستید؟');">
                    حذف</a>
                </th>
            </tr>

        </tbody>
    </table>
</div>


