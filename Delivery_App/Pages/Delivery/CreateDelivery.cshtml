@page
@model Delivery_App.Pages.Delivery.CreateDeliveryModel
@{
}


<!-- This code represents a form for creating a new delivery.
It includes fields for the delivery time, destination, and 
payment status, and a submit button. If there are any errors 
related to the destination, an alert message is displayed at 
the top of the form. The form data is bound to the properties in the model. -->


<div class="col-12 mb-4">
    @if (TempData["DestinationError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["DestinationError"]
        </div>
    }
    @if (TempData["DateError"] != null)
    {
         <div class="alert alert-danger">
             @TempData["DateError"]
         </div>
    }
</div>

<form method="post">
    <div class="row">
        <div class="col-md-12 form-group  mb-3">
            <label for="deliverytime" class="mb-2">تاریخ</label>
            <input class="form-control" name="persiantime" type="datetime" id="persiantime" value="@Model.persiantime" maxlength="10" />
        </div>
        <div class="col-md-12 form-group  mb-3">
            <label for="categoryid" class="mb-2">گروه</label>
            <select asp-items="@Model.destinations" name="destinationid" id="destinationid" class="form-control">
                <option value="0">مقصد مورد نظر را انتخاب کنید</option>
            </select>
        </div>
        <div class="col-md-12 form-group  mb-3">
            <label for="categoryid" class="mb-2">قیمت انتخابی (اختیاری)</label>
            <input class="form-control" name="optionalprice" type="text" id="optionalpric"/>
        </div>
        <div class="col-md-12 form-group mb-3">
            <label for="ispaid" class="m-2">پرداخت شد</label>
            <input name="ispaid" type="checkbox" id="ispaid" value="true" />
        </div>
        <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-success">ثبت کردن</button>
        </div>
    </div>
</form>